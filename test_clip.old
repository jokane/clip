
def test_fade_between():
    a = black(640, 480, 3)
    b = white(640, 480, 3)

    # Normal use.
    c = fade_between(a, b)
    c.verify(30)

    # Must have same length.
    d = white(640, 480, 4)
    with pytest.raises(ValueError):
        fade_between(a, d)

def test_silence_audio():
    a = from_file("test_files/bunny.webm")
    a = slice_clip(a, 0, 5)
    b = silence_audio(a)
    b.verify(30)

